{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": "src",
    "outDir": "dist",
    "noImplicitAny": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
